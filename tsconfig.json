    "compilerOptions": {
        "downlevelIteration": true,
        "outDir": "build",
        "rootDir": "src",
        "resolveJsonModule": true,
        "target": "ES5",
        "moduleResolution": "node",
        "sourceMap": true
    },
    "lib": ["2018"],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}